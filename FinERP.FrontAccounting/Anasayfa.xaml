<Page x:Class="FinERP.FrontAccounting.Anasayfa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinERP.FrontAccounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Anasayfa">

    <Grid>
        <!-- Sayfaya Özel Menü -->
        <StackPanel Orientation="Horizontal" Background="#C5CAE9" Height="50" VerticalAlignment="Top">
            <Button Content="Ürünler" Width="100" Margin="10" Click="UrunlerButton_Click" />
            <Button Content="Faturalar" Width="100" Margin="10" Click="FaturalarButton_Click" />
        </StackPanel>

        <!-- Sayfa İçeriği -->
        <TextBlock Text="Burası Anasayfa!" 
                   FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Page>
